<%- include('header', { title: 'Edit Person' }) %>
  <h2>Edit Person: <%= person.name %>
  </h2>

  <form action="/people/edit/<%= person.id %>" method="post">
    <div>
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" value="<%= person.name %>" required>
    </div>
    <div>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" value="<%= person.email %>" required>
    </div>
    <button type="submit">Update Person</button>
  </form>

  <%- include('footer') %>